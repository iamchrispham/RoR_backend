- content_for :page_title, (t 'views.users.sessions.change_password')

= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: {method: :put}, role: 'form' do |form|
  = flashes
  = form.hidden_field :reset_password_token, as: :hidden

  .input-group
    span.input-group-addon
      i.fa.fa-user
    = form.password_field :password, class: 'form-control', placeholder: (t 'views.users.password'), required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)

  .input-group
    span.input-group-addon
      i.fa.fa-user
    = form.password_field :password_confirmation, class: 'form-control', placeholder: (t 'views.users.confirm_password'), required: true

  .row
    .col-xs-12
      = content_tag :button, (t 'views.users.sessions.change_password'), type: :submit, class: 'btn btn-right-hand-column col-xs-12'
