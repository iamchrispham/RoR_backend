<div class="admin-details">
  <% if @notification.new_record? %>
      <% action = {action: "create"} %>
      <% method = :post %>
  <% else %>
      <% action = {action: "update"} %>
      <% method = :put %>
  <% end %>

  <%= form_for @notification, url: action, html: {class: 'form-horizontal'}, method: method do |form| %>
      <div class="row main-column">
        <div class="col-md-8 col-sm-10 col-xs-12">
          <div class="main-box-body clearfix">
            <div class="form-group">
              <%= form.label :title, class: "col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label", required: true  %>
              <div class="col-lg-10 col-xs-10">
                <%= form.text_field :title, class: "form-control", placeholder: t('views.general_notifications.posts.form.title') %>
              </div>
            </div>
          </div>

          <div class="main-box-body clearfix">
            <div class="form-group">
              <%= form.label :message, class: "col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label", required: true  %>
              <div class="col-lg-10 col-xs-10">
                <%= form.text_area :message, class: "form-control", placeholder: t('views.general_notifications.posts.form.description'), rows: 10 %>
              </div>
            </div>
          </div>

        </div>
      </div>

      <div class="row main-column table-selector">
        <div class="col-lg-12">
          <div class="main-box">
            <div class="main-box-body clearfix">
              <br/>
              <div class="form-group">
                <div class="col-lg-offset-1 col-lg-2">
                  <button type="submit" class="btn btn-green"><%= t('views.defaults.save') %></button>
                </div>
                <div class="col-lg-2">
                  <%= link_to t('views.defaults.cancel'), general_notifications_url, class: "btn btn-red" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

  <% end %>
</div>
